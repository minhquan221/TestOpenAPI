        function LoadBillItem() {
            var inputdata = {};
            inputdata['billCode'] = $('#billCode').val();
            inputdata['serviceCode'] = $('#serviceCode').val();
            inputdata['providerCode'] = $('#serviceProviderCode').val();
            $.ajax({
                url: '/Home/retrievePartnerBill',
                type: 'POST',
                data: { info: inputdata },
                cache: false,
                beforeSend: function () {
                    blockUI();
                    //resetTable();
                },
                success: function (rs) {
                    unBlockUI();
                    if (rs.IsOk) {
                        var Sum = 0;
                        var BillItemNo = "";
                        var dataObj = JSON.parse(rs.dataObj).data;
                        if (dataObj.billItem != undefined && dataObj.billItem.length > 0) {
                            for (var i = 0; i < dataObj.billItem.length; i++) {
                                Sum += parseInt(dataObj.billItem[i].amount);
                                if (BillItemNo == "") {
                                    BillItemNo += dataObj.billItem[i].OrderId;
                                }
                                else {
                                    BillItemNo += "," + dataObj.billItem[i].OrderId;
                                }
                            }
                        }
                        $('#amount').val(Sum);
                        $('#billCodeItemString').val(BillItemNo);
                    }
                    else {
                        dataErr = JSON.parse(rs.dataErr);
                        if (dataErr != undefined) {
                            if (dataErr.httpCode != undefined) {
                                swal({
                                    title: "Thông báo",
                                    text: dataErr.httpMessage + " - " + dataErr.moreInformation,
                                    type: 'info',
                                    confirmButtonClass: 'btn btn-confirm mt-2'
                                });
                                return;
                                //alert(rs.dataErr.httpMessage + " - " + rs.dataErr.moreInformation);
                            }
                            else if (dataErr.error != undefined) {
                                if (dataErr.error.details != undefined) {
                                    swal({
                                        title: "Thông báo",
                                        text: dataErr.error.details + " - " + dataErr.error.location,
                                        type: 'info',
                                        confirmButtonClass: 'btn btn-confirm mt-2'
                                    });
                                    return;
                                }
                                else {
                                    swal({
                                        title: "Thông báo",
                                        text: dataErr.error + " - " + dataErr.error_description,
                                        type: 'info',
                                        confirmButtonClass: 'btn btn-confirm mt-2'
                                    });
                                    return;
                                }
                                //alert(rs.dataErr.error.details + " - " + rs.dataErr.error.location);
                            }
                        }
                        else {
                            swal({
                                title: "Thông báo",
                                text: rs.Msg,
                                type: 'info',
                                confirmButtonClass: 'btn btn-confirm mt-2'
                            });
                            return;
                        }
                    }
                },

            });
        }

