@{
    ViewBag.Title = "Mở sổ tiết kiệm";
}

<div class="row">
    <div class="col-sm-12">
        <div class="page-title-box">
            <h4 class="page-title">Mở sổ tiết kiệm</h4>
        </div>
    </div>
</div>
<div class="row">
    <div class="col-sm-12">
        <div id="frmPayment" class="card-box">
            <h4 class="header-title">THÔNG TIN</h4>
            <p class="m-b-30"></p>
            <div class="row">
                <div class="col-md-12">
                    <div class="form-group row">
                        <label class="col-md-2 col-form-label">Số tiền gửi tiết kiệm</label>
                        <div class="col-md-6">
                            <input class="form-control" type="text" placeholder="Số tiền gửi tiết kiệm" name="accountOpeningAmount" id="accountOpeningAmount" value="" />
                        </div>
                        <div class="col-md-2"></div>
                        <div class="col-md-2"></div>
                    </div>
                </div>
            </div>
            <div class="row">
                <div class="col-md-12">
                    <div class="form-group row">
                        <label class="col-md-2 col-form-label">Số tài khoản nguồn</label>
                        <div class="col-md-6">
                            <input class="form-control" type="text" placeholder="Số tài khoản nguồn" id="srcAccountNum" name="srcAccountNum" value="" />
                        </div>
                        <div class="col-md-2"></div>
                        <div class="col-md-2"></div>
                    </div>
                </div>
            </div>
            <div class="row">
                <div class="col-md-12">
                    <div class="form-group row">
                        <label class="col-md-2 col-form-label">Số tài khoản chỉ định khi đáo hạn</label>
                        <div class="col-md-6">
                            <input class="form-control" type="text" placeholder="Số tài khoản chỉ định khi đáo hạn" id="payoutAccount" name="payoutAccount" value="" />
                        </div>
                        <div class="col-md-2"></div>
                        <div class="col-md-2"></div>
                    </div>
                </div>
            </div>
            <div class="row">
                <div class="col-md-12">
                    <div class="form-group row">
                        <label class="col-md-2 col-form-label">Tự động lãi kép khi đáo hạn</label>
                        <div class="col-md-6">
                            <input type="checkbox" id="accountAutoCapitalization" name="accountAutoCapitalization" />
                            @*<input class="form-control" type="text" placeholder="accountAutoCapitalization" id="accountAutoCapitalization" name="accountAutoCapitalization" value="" />*@
                        </div>
                        <div class="col-md-2"></div>
                        <div class="col-md-2"></div>
                    </div>
                </div>
            </div>
            <div class="row">
                <div class="col-md-12">
                    <div class="form-group row">
                        <label class="col-md-2 col-form-label">Tự động tái tục khi đáo hạn</label>
                        <div class="col-md-6">
                            <input type="checkbox" id="accountAutoRollover" name="accountAutoRollover" />
                            @*<input class="form-control" type="text" placeholder="accountAutoRollover" id="accountAutoRollover" name="accountAutoRollover" value="" />*@
                        </div>
                        <div class="col-md-2"></div>
                        <div class="col-md-2"></div>
                    </div>
                </div>
            </div>
            <div class="row">
                <div class="col-md-12">
                    <div class="form-group row">
                        <label class="col-md-2 col-form-label">Số kì hạn</label>
                        <div class="col-md-6">
                            <input class="form-control" type="number" placeholder="accountPeriodCount" id="accountPeriodCount" name="accountPeriodCount" value="" />
                        </div>
                        <div class="col-md-2"></div>
                        <div class="col-md-2"></div>
                    </div>
                </div>
            </div>
            <div class="row">
                <div class="col-md-12">
                    <div class="form-group row">
                        <label class="col-md-2 col-form-label">Loại kì hạn (D,M,Y,W)</label>
                        <div class="col-md-6">
                            <select class="form-control" id="accountPeriodUnit" name="accountPeriodUnit">
                                <option value="D">Day</option>
                                <option value="W">Week</option>
                                <option value="M">Month</option>
                                <option value="Y">Year</option>
                                @*<option value="internal">Trong hệ thống</option>*@
                            </select>
                        </div>
                        <div class="col-md-2"></div>
                        <div class="col-md-2"></div>
                    </div>
                </div>
            </div>
            <div class="row">
                <div class="col-md-12">
                    <div class="form-group row">
                        <div class="col-md-2 offset-md-2">
                            <input type="button" class="btn btn-custom form-control" onclick="Process()" value="Thực hiện lệnh" />
                        </div>
                        <div class="col-md-8"></div>
                    </div>
                </div>
            </div>

            <div class="row">
                <div class="col-sm-12">
                    <h4 class="header-title">THÔNG TIN KẾT QUẢ</h4>
                    <p class="m-b-30"></p>
                    <div class="row">
                        <div class="col-md-12">
                            <table id="lstAcc" style="border: 1px solid black;">
                                <thead>
                                </thead>
                                <tbody></tbody>
                            </table>
                        </div>
                    </div>
                </div>
            </div>

        </div>
    </div>
</div>


@section scripts{
    <script type="text/javascript">
        function resetTable() {
            $('#lstAcc').html("<thead></thead> <tbody></tbody>");
        }
        function buildHeader(obj) {
            var tr = '<tr>';
            for (var i = 0; i < Object.keys(obj.transaction).length; i++) {
                tr += '<th style="border: 1px solid black;">' + Object.keys(obj.transaction)[i] + '</th>';
            }
            tr += '</tr>';
            $('#lstAcc thead').append(tr);
        }
        function buildBody(obj) {
            var tr = '<tr>';
            for (var i = 0; i < Object.keys(obj.transaction).length; i++) {
                if (isNaN(obj.transaction[Object.keys(obj.transaction)[i]]) && obj.transaction[Object.keys(obj.transaction)[i]].indexOf('Date(') >= 0) {
                    var ts = obj.transaction[Object.keys(obj)[i]].replace('/Date(', '').replace(')/', '');
                    var date = new Date(Number(ts));
                    tr += '<td style="border: 1px solid black;">' + date.getDay() + "-" + date.getMonth() + "-" + date.getFullYear() + '</td>';
                }
                else {
                    tr += '<td style="border: 1px solid black;">' + obj.transaction[Object.keys(obj.transaction)[i]] + '</td>';
                }
            }
            tr += '</tr>';
            $('#lstAcc tbody').append(tr);
        }
        function Process() {
            var frm = $('#frmPayment');
            var inputdata = {};
            $(frm).find('input, select').each(function () {
                if ($(this).attr('type') == 'checkbox') {
                    if ($(this).is(':checked')) {
                        inputdata[$(this).attr('id')] = 'TRUE';
                    }
                    else {
                        inputdata[$(this).attr('id')] = 'FALSE';
                    }
                }
                else {
                    inputdata[$(this).attr('id')] = $(this).val();
                }
            });
            $.ajax({
                url: '/Home/CreateDepositAccount',
                type: 'POST',
                cache: false,
                data: { info: inputdata },
                beforeSend: function () {
                    blockUI();
                    //resetTable();
                },
                success: function (rs) {
                    unBlockUI();
                    if (rs.IsOk) {
                        swal({
                            title: "Thông báo",
                            text: "Process Success. Your number account is " + rs.dataObj,
                            type: 'info',
                            confirmButtonClass: 'btn btn-confirm mt-2'
                        });
                        if (rs.dataObj != undefined) {
                            resetTable();
                            buildHeader(rs.dataObj);
                            buildBody(rs.dataObj);
                        }
                        return;
                    }
                    else {
                        if (rs.dataErr != undefined) {
                            if (rs.dataErr.httpCode != undefined) {
                                swal({
                                    title: "Thông báo",
                                    text: rs.dataErr.httpMessage + " - " + rs.dataErr.moreInformation,
                                    type: 'info',
                                    confirmButtonClass: 'btn btn-confirm mt-2'
                                });
                                return;
                                //alert(rs.dataErr.httpMessage + " - " + rs.dataErr.moreInformation);
                            }
                            else if (rs.dataErr.error != undefined) {
                                if (rs.dataErr.error.details != undefined) {
                                    swal({
                                        title: "Thông báo",
                                        text: rs.dataErr.error.code + " - " + rs.dataErr.error.type + " - " + rs.dataErr.error.details + " - " + rs.dataErr.error.location,
                                        type: 'info',
                                        confirmButtonClass: 'btn btn-confirm mt-2'
                                    });
                                    return;
                                }
                                else {
                                    swal({
                                        title: "Thông báo",
                                        text: rs.dataErr.error.code + " - " + rs.dataErr.error.type + " - " + rs.dataErr.error + " - " + rs.dataErr.error_description,
                                        type: 'info',
                                        confirmButtonClass: 'btn btn-confirm mt-2'
                                    });
                                    return;
                                }
                                //alert(rs.dataErr.error.details + " - " + rs.dataErr.error.location);
                            }
                        }
                        else {
                            swal({
                                title: "Thông báo",
                                text: rs.Msg,
                                type: 'info',
                                confirmButtonClass: 'btn btn-confirm mt-2'
                            });
                            return;
                        }
                    }
                },

            });
        }
    </script>
}