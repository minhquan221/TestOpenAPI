@section scripts{
    <script type="text/javascript">
        function resetTable() {
            $('#lstAcc').html("<thead></thead> <tbody></tbody>");
        }
        function buildHeader(obj) {
            var tr = '<tr>';
            for (var i = 0; i < Object.keys(obj).length; i++) {
                tr += '<th style="border: 1px solid black;">' + Object.keys(obj)[i] + '</th>';
            }
            tr += '</tr>';
            $('#lstAcc thead').append(tr);
        }
        function buildBody(obj) {
            var tr = buildStringBody(obj, 0);

            $('#lstAcc tbody').append(tr);
        }

        function buildStringBody(obj, subBD) {
            if (obj != null) {
                if (subBD > 0) {
                    var tr = '<ul>';
                    for (var i = 0; i < Object.keys(obj).length; i++) {
                        if (typeof obj[Object.keys(obj)[i]] === 'object') {
                            tr += buildStringBody(obj[Object.keys(obj)[i]], 1);
                        }
                        else {
                            if (isNaN(obj[Object.keys(obj)[i]]) && obj[Object.keys(obj)[i]].indexOf('Date(') >= 0) {
                                var ts = obj[Object.keys(obj)[i]].replace('/Date(', '').replace(')/', '');
                                var date = new Date(Number(ts));
                                tr += '<li>' + Object.keys(obj)[i] + ": " + date.getDay() + "-" + date.getMonth() + "-" + date.getFullYear() + '</li>';
                            }
                            else {
                                tr += '<li>' + Object.keys(obj)[i] + ": " + obj[Object.keys(obj)[i]] + '</li>';
                            }
                        }
                    }
                    tr += '</ul>';
                    return tr;
                }
                else {
                    var tr = '<tr>';
                    for (var i = 0; i < Object.keys(obj).length; i++) {
                        if (typeof obj[Object.keys(obj)[i]] === 'object') {
                            tr += '<td style="border: 1px solid black;">' + buildStringBody(obj[Object.keys(obj)[i]], 1) + '</td>';
                        }
                        else {
                            if (isNaN(obj[Object.keys(obj)[i]]) && obj[Object.keys(obj)[i]].indexOf('Date(') >= 0) {
                                var ts = obj[Object.keys(obj)[i]].replace('/Date(', '').replace(')/', '');
                                var date = new Date(Number(ts));
                                tr += '<td style="border: 1px solid black;">' + date.getDay() + "-" + date.getMonth() + "-" + date.getFullYear() + '</td>';
                            }
                            else {
                                tr += '<td style="border: 1px solid black;">' + obj[Object.keys(obj)[i]] + '</td>';
                            }
                        }
                    }
                    tr += '</tr>';
                    return tr;
                }
            }
        }
        function Process() {
            var frm = $('#frmPayment');
            var inputdata = {};
            $(frm).find('input, select').each(function () {
                inputdata[$(this).attr('id')] = $(this).val();
            });
            $.ajax({
                url: '/Home/fastTransfers',
                type: 'POST',
                cache: false,
                data: { info: inputdata },
                beforeSend: function () {
                    blockUI();
                    //resetTable();
                },
                success: function (rs) {
                    unBlockUI();
                    if (rs.IsOk) {
                        swal({
                            title: "Thông báo",
                            text: "Process Payment Success",
                            type: 'info',
                            confirmButtonClass: 'btn btn-confirm mt-2'
                        });
                        if (rs.dataObj != undefined) {
                            resetTable();
                            buildHeader(rs.dataObj);
                            buildBody(rs.dataObj);
                        }
                        return;
                    }
                    else {
                        if (rs.dataErr != undefined) {
                            if (rs.dataErr.httpCode != undefined) {
                                swal({
                                    title: "Thông báo",
                                    text: rs.dataErr.httpMessage + " - " + rs.dataErr.moreInformation,
                                    type: 'info',
                                    confirmButtonClass: 'btn btn-confirm mt-2'
                                });
                                return;
                                //alert(rs.dataErr.httpMessage + " - " + rs.dataErr.moreInformation);
                            }
                            else if (rs.dataErr.error != undefined) {
                                if (rs.dataErr.error.details != undefined) {
                                    swal({
                                        title: "Thông báo",
                                        text: rs.dataErr.error.code + " - " + rs.dataErr.error.type + " - " + rs.dataErr.error.details + " - " + rs.dataErr.error.location,
                                        type: 'info',
                                        confirmButtonClass: 'btn btn-confirm mt-2'
                                    });
                                    return;
                                }
                                else {
                                    swal({
                                        title: "Thông báo",
                                        text: rs.dataErr.error.code + " - " + rs.dataErr.error.type + " - " + rs.dataErr.error + " - " + rs.dataErr.error_description,
                                        type: 'info',
                                        confirmButtonClass: 'btn btn-confirm mt-2'
                                    });
                                    return;
                                }
                                //alert(rs.dataErr.error.details + " - " + rs.dataErr.error.location);
                            }
                        }
                        else {
                            swal({
                                title: "Thông báo",
                                text: rs.Msg,
                                type: 'info',
                                confirmButtonClass: 'btn btn-confirm mt-2'
                            });
                            return;
                        }
                    }
                },

            });
        }
    </script>
}