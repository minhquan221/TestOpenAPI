                <div class="form-group row">
                    <label class="col-md-2 col-form-label">providerCode</label>
                    <div class="col-md-6" id="frmProviderCode">
                        <input class="form-control" type="text" placeholder="providerCode" name="providerCode" id="providerCode" value="" />
                    </div>
